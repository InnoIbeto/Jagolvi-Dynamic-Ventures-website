<main class="container">
  <div class="row text-center justify-content-center my-2">
    <div class="col">
      <h1 class="display-6">The Jagolvi Dynamic Ventures</h1>
    </div>
  </div>

  <hr>

  <div class="row text-center justify-content-center index-row-2">
    <div class="col-md-6">
      <h5>
        Your one-stop online marketplace for premium truck spare parts and reliable services!!
      </h5>

      <div class="d-grid gap-2 d-md-block">
        <%= link_to 'Read More', pages_about_path, class: "btn btn-outline-info" %>
        <%= link_to 'Order Now', pages_products_path, class: "btn btn-outline-light" %>
      </div>

    </div>

    <div class="col-md-6">
      
      <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag('Tata Logo.png') %>
          </div>
          <div class="carousel-item">
            <%= image_tag('Yutong Logo.png') %>
          </div>
          <div class="carousel-item">
            <%= image_tag('Ashok_Leyland Logo.png') %>
          </div>
          <div class="carousel-item">
            <%= image_tag('mercedes benz logo.png') %>
          </div>
          <div class="carousel-item">
            <%= image_tag('Cummins Logo.png') %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

    </div>
  </div>

  <div class="row text-center justify-content-center">
    <div class="row text-center justify-content-center" >
     <%= image_tag('Index background Image.jpg') %>
    </div>
  </div>

</main>